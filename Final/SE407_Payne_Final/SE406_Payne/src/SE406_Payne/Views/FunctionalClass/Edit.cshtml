@model SE406_Payne.Models.FunctionalClassViewModel
@section list {
<h1>Function Classes</h1>
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            @using (Html.BeginForm("edit", "FunctionalClass", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewFunctionalClass.FunctionalClassId)
                    @Html.TextBoxFor(Model => Model.NewFunctionalClass.FunctionalClassId,
                   new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewFunctionalClass.FunctionalClassId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewFunctionalClass.FunctionalClassType)
                    @Html.TextBoxFor(Model => Model.NewFunctionalClass.FunctionalClassType,
                    new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewFunctionalClass.FunctionalClassType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-lg" />
                    <div class="btn btn-lg">
                        @Html.ActionLink("Back to Functional Classes", "Index")
                    </div>
                </div>
            }
        </div>
    </div>
</div>